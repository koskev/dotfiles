{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "lockFileMaintenance": {
    "enabled": true,
    "recreateWhen": "always",
    "rebaseStalePrs": true,
    "schedule": [
      "* * * * *"
    ],
    "automerge": true,
    "//": "Use branch mode to preserve the signed git commit. Otherwise Github will/might mess up the top commit",
    "automergeType": "branch"
  },
  "nix": {
    "managerFilePatterns": [
      "/(^|/)flake\\.nix$/"
    ],
    "commitMessageTopic": "nix",
    "commitMessageExtra": "to {{newValue}}",
    "enabled": true
  }
}
